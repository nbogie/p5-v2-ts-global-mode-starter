{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "type-check",
      "type": "shell",
      //run type-check but always exit 0 (in order to have terminal close)
      "command": "npm run type-check || cd .",
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "revealProblems": "onProblem",
        "reveal": "silent",
        "close": true
      },
    }
  ]
}